<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuggyTasks.Views.LocationPage"
             Title="Location">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Location Information" 
               FontSize="24" 
               HorizontalOptions="Center" 
               Margin="0,0,0,20"/>
        <Label x:Name="LocationLabel" Text="Getting location..." />
        <Button Text="Refresh Location" 
                Clicked="OnRefreshLocation"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage> 